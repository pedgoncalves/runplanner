<?xml version="1.0" encoding="utf-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<lifecycle>
		<phase-listener>br.com.runplanner.view.util.LoginErrorPhaseListener</phase-listener>
	</lifecycle>

    <component>
		<component-type>org.primefaces.component.SentinelMenu</component-type>
		<component-class>org.primefaces.sentinel.component.menu.SentinelMenu</component-class>
	</component>

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
    <validator>
        <validator-id>EmailValidator</validator-id>
        <validator-class>br.com.runplanner.view.util.EmailValidator</validator-class>
    </validator>	
    <converter>
    	<converter-id>customerConverter</converter-id>
    	<converter-class>br.com.runplanner.view.util.CustomerConverter</converter-class>
    </converter>
    <converter>
    	<converter-id>doubleConverter</converter-id>
    	<converter-class>br.com.runplanner.view.util.DoubleConverter</converter-class>
    </converter>

    <render-kit>
        <renderer>
			<component-family>org.primefaces.component</component-family>
			<renderer-type>org.primefaces.component.SentinelMenuRenderer</renderer-type>
			<renderer-class>org.primefaces.sentinel.component.menu.SentinelMenuRenderer</renderer-class>
		</renderer>
    </render-kit>

</faces-config>